<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0"
>
	<display-name>pahana-edu-billing</display-name>
	<welcome-file-list>
		<welcome-file>views/LoginUser.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<display-name>LoginUserServlet</display-name>
		<servlet-name>LoginUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.auth.LoginUserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>LogoutUserServlet</display-name>
		<servlet-name>LogoutUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.auth.LogoutUserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>CustomerServlet</display-name>
		<servlet-name>CustomerServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.CustomerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>UserServlet</display-name>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginUserServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutUserServlet</servlet-name>
		<url-pattern>/logout-user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/customer/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
</web-app>