<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>pahana-edu-billing</display-name>
	<welcome-file-list>
		<welcome-file>views/LoginUser.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<display-name>CreateUserServlet</display-name>
		<servlet-name>CreateUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.CreateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>LoginUserServlet</display-name>
		<servlet-name>LoginUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.auth.LoginUserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DashboardServlet</display-name>
		<servlet-name>DashboardServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.dashboard.DashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>UpdateUserServlet</display-name>
		<servlet-name>UpdateUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.UpdateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DisplayUsers</display-name>
		<servlet-name>DisplayUsers</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.DisplayUsers</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DeleteUserServlet</display-name>
		<servlet-name>DeleteUserServlet</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.DeleteUserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ChangePassword</display-name>
		<servlet-name>ChangePassword</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.ChangePassword</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ChangeUsername</display-name>
		<servlet-name>ChangeUsername</servlet-name>
		<servlet-class>com.pahana.edu.controller.user.ChangeUsername</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateUserServlet</servlet-name>
		<url-pattern>/create-user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginUserServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DashboardServlet</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUserServlet</servlet-name>
		<url-pattern>/update-user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DisplayUsers</servlet-name>
		<url-pattern>/display-users</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteUserServlet</servlet-name>
		<url-pattern>/delete-User-Servlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangeUsername</servlet-name>
		<url-pattern>/change-username</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangePassword</servlet-name>
		<url-pattern>/change-password</url-pattern>
	</servlet-mapping>
</web-app>